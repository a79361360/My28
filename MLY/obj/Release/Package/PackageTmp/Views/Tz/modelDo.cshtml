    <script src="/JS/tz.js"></script>
    <script src="/JS/savemodel.js"></script>
    <script>
        $('.save-other').tap(function () {
            $('.model-pop').css('display', 'block')
        })
        $('.tz-pop .close').tap(function () {
            $('.model-pop').css('display', 'none')
        })
    </script>

    <script src="/JS/common.js"></script>
    <div class="tz-pop showmsg">
        <div class="mask"></div>
        <div class="content">
            <h3 class="showmsg-title"></h3>
            <p class="showmsg-content"></p>
            <div class="br btn-box" id="box">
