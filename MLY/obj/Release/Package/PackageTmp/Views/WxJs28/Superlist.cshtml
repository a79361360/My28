        var str = "", str1 = ""; //上周,本周
        GetMySoure = function (type) {
            //type为1表示取得个人信息,type为2表示取得排行榜信息
            var url = "/Tz/GetRListInfo";
            $.getJSON(url, { type: type }, function (ret) {
                if (ret.code == 1000) {
                    if (type == 1) {
                        var data = eval(ret.data)[0];
                        var dypm = data.dypm;  var dyyl = data.dyyl;
                        if (dypm == -1) {
                            dypm = "暂未入榜";
                        } else {
                            dypm = data.dypm;
                        }
                        $("#rbyl").html("<span class=\"black\">周榜总赢取：</span>" + dyyl + "</span>"); $("#rbpm").html("<span class=\"black\">您当前排名：</span>" + dypm);
                    }
                }
            })
        }


        GetWeekSuperList = function (type) {
            var url = "/Shared/GetSuperList";
            $.getJSON(url, { type: type }, function (ret) {
                if (ret.code == 1000) {
                    if (type == 3) {
                        var znum = 0, jnum = 0, snum = 0;//定义一个上周的条数,本周的条数
                        var data = eval(ret.data)
                        $.each(data, function (key, val) {
                            var row = key + 1;
                            if (val.ntype ==3) {
                                znum++;
                                if (row == 1) {
                                    str += "<tr><td><img src=\"/Content/WeiXin/images/rr.png\" class=\"fl\" /><p class=\"list-rank2 clearfix\"><span class=\"positive fl\"><span class=\"black\">游戏成绩：</span>" + parseFloat(val.ylcount).toLocaleString() + "</span><br><span class=\" fl\">" + val.nickname.substring(0, 6) + "</span></p></td><td>奖励<span class=\"positive wl\">¥" + GetYueAward(row - 1) + "</span></td></tr>";
                                }
                                if (row == 2) {
                                    str += "<tr><td><img src=\"/Content/WeiXin/images/rb.png\" class=\"fl\" /><p class=\"list-rank2 clearfix\"><span class=\"positive  fl\"><span class=\"black\">游戏成绩：</span>" + parseFloat(val.ylcount).toLocaleString() + "</span><br><span class=\" fl\">" + val.nickname.substring(0, 6) + "</span></p></td><td>奖励<span class=\"positive wl\">¥" + GetYueAward(row - 1) + "</span></td></tr>";
