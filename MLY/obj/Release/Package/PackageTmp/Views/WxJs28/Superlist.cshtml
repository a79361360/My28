        $('.jcphb-tab').on('click', 'span', function () {
            var index = $(this).index();
            $(this).addClass('jcphb-active').siblings().removeClass('jcphb-active');
            $('.jcphb-2-panel').eq(index).addClass('active').siblings().removeClass('active');
